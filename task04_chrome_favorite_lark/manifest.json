{
  "manifest_version": 3,
  "name": "Lark Bookmarks - 飞书书签收藏器",
  "version": "1.0.0",
  "description": "一键将网页收藏到飞书多维表格中，支持标签分类和批量管理。",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://*.feishu.cn/*",
    "https://*.larksuite.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background/simple-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "收藏到飞书多维表格",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "commands": {
    "bookmark-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "快速收藏当前网页"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}